<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.miran3ma.invetoryapp.DetailsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/base_layout_for_txt"
            android:text="Item Name : " />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/name"
            style="@style/base_layout_for_txt" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/base_layout_for_txt"
            android:text="Item Supplier : " />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/supplier"
            style="@style/base_layout_for_txt" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/base_layout_for_txt"
            android:text="Item Count : " />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/count"
            style="@style/base_layout_for_txt" />
    </LinearLayout>


    <EditText
        android:id="@+id/amout_quantity"
        style="@style/base_layout_for_txt"
        android:hint="Order the Quantity from supplier"
        android:inputType="number" />
    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order From Supplier" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/plus_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add quantity" />

        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/count_plus_minus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/minus_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="subtract the quantity" />


    </LinearLayout>

</LinearLayout>
